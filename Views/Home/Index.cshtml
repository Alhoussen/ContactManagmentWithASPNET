@{
    ViewData["Title"] = "Liste des Contacts";
}

<!-- Header Section -->
<div class="container-fluid py-4">
    <div class="row mb-5">
        <div class="col-12">
            <div class="text-center">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="fas fa-address-book me-3"></i>
                    Mes Contacts
                </h1>
                <p class="lead text-muted mb-4">G√©rez facilement tous vos contacts en un seul endroit</p>
            </div>
        </div>
    </div>
</div>

<!-- Search Section -->
<div class="row mb-5">
    <div class="col-12">
        <div class="search-container">
            <input type="text" class="form-control search-input" id="searchInput" 
                   placeholder="üîç Rechercher un contact par nom, email ou t√©l√©phone...">
            <i class="fas fa-search search-icon"></i>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="row mb-4">
    <div class="col-md-6 offset-md-3">
        <select class="form-select" id="sortSelect" style="border-radius: 12px; border: 2px solid #e9ecef;">
            <option value="lastName_asc">üìù Trier par nom (A-Z)</option>
            <option value="lastName_desc">üìù Trier par nom (Z-A)</option>
            <option value="firstName_asc">üë§ Trier par pr√©nom (A-Z)</option>
            <option value="firstName_desc">üë§ Trier par pr√©nom (Z-A)</option>
            <option value="createdAt_desc">üïí Plus r√©cents</option>
            <option value="createdAt_asc">üïí Plus anciens</option>
        </select>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-5" id="statsCards">
    <div class="col-md-4 mb-3">
        <div class="modern-card stats-card text-center p-4">
            <div class="d-flex align-items-center justify-content-center mb-3">
                <i class="fas fa-users fa-3x me-3"></i>
                <div>
                    <h2 class="mb-0 fw-bold" id="totalContacts">0</h2>
                    <p class="mb-0 opacity-75">Total Contacts</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="modern-card text-center p-4" style="background: var(--success-gradient); color: white;">
            <div class="d-flex align-items-center justify-content-center mb-3">
                <i class="fas fa-phone fa-3x me-3"></i>
                <div>
                    <h2 class="mb-0 fw-bold" id="contactsWithPhone">0</h2>
                    <p class="mb-0 opacity-75">Avec T√©l√©phone</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="modern-card text-center p-4" style="background: var(--secondary-gradient); color: white;">
            <div class="d-flex align-items-center justify-content-center mb-3">
                <i class="fas fa-map-marker-alt fa-3x me-3"></i>
                <div>
                    <h2 class="mb-0 fw-bold" id="contactsWithAddress">0</h2>
                    <p class="mb-0 opacity-75">Avec Adresse</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contacts Grid -->
<div class="row" id="contactsGrid">
    <!-- Contacts will be loaded here -->
</div>

<!-- Pagination -->
<div class="row mt-4">
    <div class="col-12">
        <nav aria-label="Pagination des contacts">
            <ul class="pagination justify-content-center" id="pagination">
                <!-- Pagination will be generated here -->
            </ul>
        </nav>
    </div>
</div>

<!-- Empty State -->
<div class="empty-state fade-in" id="emptyState" style="display: none;">
    <div class="modern-card p-5 text-center">
        <i class="fas fa-address-book fa-5x mb-4 text-muted"></i>
        <h3 class="mb-3">Aucun contact trouv√©</h3>
        <p class="text-muted mb-4">Commencez par ajouter votre premier contact !</p>
        <button class="btn btn-modern btn-modern-primary btn-lg" data-bs-toggle="modal" data-bs-target="#contactModal" 
                onclick="openContactModal()">
            <i class="fas fa-plus me-2"></i>
            Ajouter un Contact
        </button>
    </div>
</div>

<!-- Floating Action Button -->
<button class="btn btn-floating" data-bs-toggle="modal" data-bs-target="#contactModal" 
        onclick="openContactModal()" title="Nouveau contact">
    <i class="fas fa-plus"></i>
</button>

<!-- Contact Details Modal -->
<div class="modal fade" id="contactDetailsModal" tabindex="-1" aria-labelledby="contactDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h4 class="modal-title fw-bold" id="contactDetailsModalLabel">
                    <i class="fas fa-user me-3"></i>
                    D√©tails du Contact
                </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-4" id="contactDetailsContent">
                <!-- Contact details will be loaded here -->
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                    <p class="mt-3 text-muted">Chargement des d√©tails...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold text-danger" id="deleteConfirmModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirmer la suppression
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-4">
                <div class="text-center">
                    <div class="mb-4">
                        <i class="fas fa-trash-alt fa-4x text-danger mb-3"></i>
                        <h5>√ätes-vous s√ªr de vouloir supprimer ce contact ?</h5>
                        <p class="text-muted mb-0">Cette action est irr√©versible.</p>
                    </div>
                    <div class="contact-preview p-3 bg-light rounded mb-4" id="deleteContactPreview">
                        <!-- Contact preview will be shown here -->
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-outline-secondary me-2" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Annuler
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <span class="loading-spinner me-2" style="display: none;"></span>
                    <i class="fas fa-trash me-2"></i>
                    Supprimer d√©finitivement
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Contact Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h4 class="modal-title fw-bold" id="contactModalLabel">
                    <i class="fas fa-user-plus me-3"></i>
                    Nouveau Contact
                </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="contactForm">
                <div class="modal-body px-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Pr√©nom" required>
                                <label for="firstName">üë§ Pr√©nom *</label>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Nom" required>
                                <label for="lastName">üë§ Nom *</label>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                                <label for="email">üìß Email *</label>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="T√©l√©phone">
                                <label for="phoneNumber">üìû T√©l√©phone</label>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" id="address" name="address" placeholder="Adresse" style="height: 100px;"></textarea>
                                <label for="address">üè† Adresse</label>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-outline-secondary me-2" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Annuler
                    </button>
                    <button type="submit" class="btn btn-modern btn-modern-primary">
                        <span class="loading-spinner me-2" style="display: none;"></span>
                        <i class="fas fa-save me-2"></i>
                        Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Floating Action Button -->
<button class="btn btn-primary btn-floating d-md-none" data-bs-toggle="modal" data-bs-target="#contactModal" 
        onclick="openContactModal()" title="Nouveau contact">
    <i class="fas fa-plus"></i>
</button>

@section Scripts {
<script src="~/js/contacts.js?v=2.0"></script>
}

